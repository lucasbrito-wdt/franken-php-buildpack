#!/usr/bin/env bash
# bin/release <build-dir>
# Provide default process types for Laravel Octane with FrankenPHP.

BUILD_DIR=$1

cat <<EOF
---
addons: []
default_process_types:
  web: php artisan octane:start --server=frankenphp --host=0.0.0.0 --port=\${PORT:-8000} --workers=auto --max-requests=500
EOF
